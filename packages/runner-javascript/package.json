{
    "name": "@plurid/runner",
    "version": "0.0.0",
    "description": "Test Runner",
    "keywords": [
        "test",
        "runner"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/runner"
    },
    "bugs": {
        "email": "source@plurid.com",
        "url": "https://github.com/plurid/runner/issues"
    },
    "homepage": "https://github.com/plurid/runner/blob/master/packages/runner-cli/README.md",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "main": "distribution/index.js",
    "module": "distribution/index.es.js",
    "typings": "distribution/index.d.ts",
    "files": [
        "distribution"
    ],
    "scripts": {
        "test": "jest -c ./configurations/jest.config.js --coverage --verbose  ./source",
        "test.suite": "jest -c ./configurations/jest.config.js --coverage --verbose",
        "start": "rollup -c ./scripts/rollup.config.ts -w",
        "build.removeTests": "rm -rf `find ./distribution/ -type d -name __tests__`",
        "build.development": "rollup -c ./scripts/rollup.config.ts && yarn build.removeTests",
        "build": "rollup -c ./scripts/rollup.config.ts && yarn build.removeTests",
        "prebuild": "rm -rf distribution",
        "prepublishOnly": "yarn build"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^16.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@types/node": "^14.14.8",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "eslint": "^7.13.0",
        "jest": "^26.6.3",
        "rollup": "^2.33.3",
        "rollup-plugin-typescript2": "^0.29.0",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.5"
    },
    "dependencies": {
        "commander": "^6.2.0"
    }
}
